
<%= render 'specialist/orderprocess1' %>

<div class="container py-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%= image_tag(@service.photo_url, width: '100%') %>
    </div>
    <div class="col-sm-12 col-md-6">
      <h1><%= @service.name %></h1>
      <p>Some awesome description of our amazing service.</p>
      <p>Amount: <%= humanized_money_with_symbol(@service.price) %></p>
        <%= form_tag orders_path do %>
          <%= hidden_field_tag 'service_id', @service.id %>
          <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
