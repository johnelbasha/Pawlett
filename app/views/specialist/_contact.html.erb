 <div class="container d-flex justify-content-center px-0">
  <div class="contact-group">
    <div class="container">
        <h2 class="text-center">Contact Us</h2>
        <div class="container">
          <div class="row d-flex justify-content-center">
            <div class="col-10 col-md-6">
              <div class="contact-details px-3">
                <div class="telephone-group container d-flex justify-content-start mt-3">
                  <i class="fas fa-phone icon"></i>
                  <div class="phone-numers">
                    <p>Tel: 01330-828196</p>
                    <p>Mob: 07-82587008</p>
                  </div>
                </div>
                <div class="email-group container d-flex justify-content-start mt-3">
                  <i class="fas fa-at icon"></i>
                  <div class="email">
                    <p>enquiries@pawlettplumbing.co.uk</p>

                  </div>
                </div>
                <div class="address-group container d-flex justify-content-start mt-3 mb-5">
                  <i class="fas fa-map-marker-alt icon"></i>
                  <div class="address">
                    <p>1 The Beeches,</p>
                    <p>Banchory Lodge,</p>
                    <p>Banchory, AB31 5HS</p>
                  </div>
                </div>
                <div class="icons-group container d-flex justify-content-around my-3">
                  <a href="https://twitter.com/PawlettPlumbing" target="_blank"><i class="fab fa-twitter"></i></a>
                  <a href="https://www.facebook.com/PawlettPlumbing/?fref=ts&pnref=story" target="_blank" id="facebook-link"><i class="fab fa-facebook"></i></a>
                  <a href="https://www.instagram.com/pawlettplumbing/" target="_blank"><i class="fab fa-instagram"></i></a>
                </div>
      <!--                 <div class="accred-group container d-flex justify-content-center my-3">
                  <%#= image_tag 'gas-safe-register.jpg', width: 64 %>
                </div> -->
              </div>
            </div>

          </div>

        </div>

    </div>
    <div class="contact-background mt-5">
      <div class="filter">
        <div class="container d-flex justify-content-center">
          <div class="row contacts-row">
            <div class="col-12">
              <div class="contact-form" style="color: white;">
                <%= simple_form_for(@query) do |f| %>
                  <%= f.input :name, label: 'Full Name:', placeholder: "James Duncan" %>
                  <%= f.input :email, label: 'e-mail address', placeholder: "jduncan@gmail.com" %>
                  <%= f.text_area :message, placeholder: "  Your message..."%>
                  <%= f.button :submit, 'Send', id: 'submitbutton' %>
                <% end %>

   <!--              <div class="container d-flex justify-content-between mb-3">
                  <input class="input-name" type="text" placeholder="your name">
                  <input class="input-email" type="text" placeholder="your e-mail">
                </div>
                <div class="container p-0 input-message d-flex align-items-start">
                  <input class="message" type="text" placeholder="message">
                </div>
                <div class="container d-flex justify-content-end mt-3">
                  <button class="btn-submit-dark">Submit</button>
                </div> -->
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
 </div>
